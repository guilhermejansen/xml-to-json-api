// /tsconfig.json
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "types": ["node", "express"],
      "typeRoots": ["./src/@types", "./node_modules/@types"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  
  